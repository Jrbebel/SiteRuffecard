{% extends "SiteruffecardeSiteBundle::Layout.html.twig"%}


{% trans_default_domain 'FOSUserBundle' %}
{% block body %}

    <div class="container container-login">
        <div class="row">

            <div class="col-lg-12">
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">


                    <div class="form-group">

                        <label for="username" class="col-sm-4 control-label"> {{ form_label(form.username ) }}    </label>

                        <div class="col-sm-6">
                            {{form_widget(form.username, {'attr': {'class': 'form-control'}} )}}
                        </div>
                    </div>
                    <div class="form-group">

                        <label for="username" class="col-sm-4 control-label"> {{ form_label(form.email ) }}    </label>

                        <div class="col-sm-6">
                            {{form_widget(form.email, {'attr': {'class': 'form-control'}} )}}
                        </div>
                    </div>
                    <div class="form-group">

                        <label for="username" class="col-sm-4 control-label"> {{ form_label(form.plainPassword.first) }}    </label>

                        <div class="col-sm-6">
                            {{form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}} )}}
                        </div>
                    </div>
                    <div class="form-group">

                        <label for="username" class="col-sm-4 control-label"> {{ form_label(form.plainPassword.second) }}    </label>

                        <div class="col-sm-6">
                            {{form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}} )}}
                        </div>
                        <div id="reinitialise" class="col-sm-offset-2 col-sm-10"> 

                            <input type="submit" class="btn btn-default" value="{{ 'registration.submit'|trans }}" />

                        </div>   

                    </div>   


                    {{ form_rest(form) }}

            </div>
            </form>
        </div>
    </div>
</div>

{% endblock body %}
