{% extends "SiteruffecardeSiteBundle::Layout.html.twig"%}


{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="container ">
        <div class="row">

            <div class="col-lg-12">

                <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
                {% if targetUrl %}
                    <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
                    {% endif %}

            </div>
        </div>
    </div>
{% endblock body %}
